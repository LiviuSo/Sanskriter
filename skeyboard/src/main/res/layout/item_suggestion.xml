<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/suggestion_margin">

    <com.lvicto.skeyboard.view.key.TypableKeyView
        style="@style/KeyStyle"
        android:id="@+id/suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/key_stroke"
        app:backgroundNormal="@drawable/key_suggestion"
        app:backgroundPressed="@drawable/key_suggestion" />
</FrameLayout>
