<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_item_word"
    android:layout_marginBottom="@dimen/item_margin_bottom"
    android:background="@color/colorWord"
    android:orientation="horizontal"
    android:paddingStart="3dp"
    android:paddingLeft="3dp"
    android:paddingEnd="3dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvItemWordIAST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="[word IAST]"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvItemWordSa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="[word Sa]"
            android:textSize="17dp"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:text="[Definition]"
        android:textStyle="italic"
        android:gravity="center_vertical|start"
        android:layout_marginStart="@dimen/item_margin_left_right"
        android:layout_marginLeft="@dimen/item_margin_left_right"
        android:ellipsize="end"
        android:maxLines="1"/>

</LinearLayout>