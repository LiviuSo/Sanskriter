<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".common.activities.DictionaryActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Words"
        android:id="@+id/btnTestWords"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Declentions [DB construction]"
        android:id="@+id/btnDeclensionConstruction"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Conjugations [DB construction]"
        android:id="@+id/btnConjugationConstruction"
        android:textAllCaps="false"/>

</LinearLayout>