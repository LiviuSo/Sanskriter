<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerTestDic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWordLighter">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/containerWords"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defaultNavHost="true"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/navigation_words" />

    <FrameLayout
        android:id="@+id/containerWordGrammar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerWords" />

</androidx.constraintlayout.widget.ConstraintLayout>