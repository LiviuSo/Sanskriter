<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.DictionaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/llSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSearchWord"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/editSearchDic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/item_margin_left_right"
                android:layout_weight="1"
                android:backgroundTint="@color/colorSearchWord"
                android:hint="@string/dic_search_hint"
                android:inputType="text" />

            <ImageButton
                android:id="@+id/btnCloseSearchBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="TODO"
                android:src="@drawable/ic_close_24dp" />
        </LinearLayout>

        <include layout="@layout/layout_all_words" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabDictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dim_fab_bottom"
        android:elevation="@dimen/dim_fab_elevation"
        android:src="@drawable/ic_add_24dp"
        app:backgroundTint="@color/colorShowDefinition"/>

</android.support.design.widget.CoordinatorLayout>