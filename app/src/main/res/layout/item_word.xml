<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_item_word"
    android:layout_marginBottom="@dimen/item_margin_bottom"
    android:background="@color/colorWord"
    android:orientation="vertical"
    android:paddingStart="3dp"
    android:paddingLeft="3dp"
    android:paddingEnd="3dp">

    <TextView
        android:id="@+id/tvItemWordIAST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[word IAST]"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/tvItemWordSa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:text="[word Sa]"
        android:textSize="17dp" />

</LinearLayout>