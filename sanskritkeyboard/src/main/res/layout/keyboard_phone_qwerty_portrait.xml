            android:text="@string/lang_label_qwerty" />

        <Button
            android:id="@+id/keySymbol"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Sb"/>

        <Button
            android:id="@+id/keyAction"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="Ac" />

