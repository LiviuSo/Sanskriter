<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/row_suggestions" android:id="@+id/llSuggestions"/>

    <include layout="@layout/row_extras" android:id="@+id/svExtra"/>

    <LinearLayout
        android:id="@+id/llDigits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svExtra">

        <Button
            android:id="@+id/keyDigit1"
            style="@style/CustomKeyDigit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_digit_1" />

        <Button
            android:id="@+id/keyDigit2"
            style="@style/CustomKeyDigit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_digit_2" />

        <Button
            android:id="@+id/keyDigit3"
            style="@style/CustomKeyDigit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_digit_3" />

        <Button
            android:id="@+id/keyDigit4"
            style="@style/CustomKeyDigit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_digit_4" />

        <Button
            android:id="@+id/keyDigit5"
            style="@style/CustomKeyDigit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_digit_5" />

        <Button
            android:id="@+id/keyDigit6"
            style="@style/CustomKeyDigit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_digit_6" />

        <Button
            android:id="@+id/keyDigit7"
            style="@style/CustomKeyDigit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_digit_7" />

        <Button
            android:id="@+id/keyDigit8"
            style="@style/CustomKeyDigit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_digit_8" />

        <Button
            android:id="@+id/keyDigit9"
            style="@style/CustomKeyDigit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_digit_9" />

        <Button
            android:id="@+id/keyDigit0"
            style="@style/CustomKeyDigit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_digit_0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llQwerty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llDigits">

        <Button
            android:id="@+id/keyQ"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_letter_q" />

        <Button
            android:id="@+id/keyW"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_letter_w" />

        <Button
            android:id="@+id/keyE"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_letter_e" />

        <Button
            android:id="@+id/keyR"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_letter_r" />

        <Button
            android:id="@+id/keyT"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_letter_t" />

        <Button
            android:id="@+id/keyY"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
