        <Button
            android:id="@+id/keyX"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_letter_x" />

        <Button
            android:id="@+id/keyC"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_letter_c" />

        <Button
            android:id="@+id/keyV"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/key_label_letter_v" />

        <Button
            android:id="@+id/keyB"
            style="@style/CustomKeyLetter"
            android:layout_width="0dp"
            android:layout_weight="1"
