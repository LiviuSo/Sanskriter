<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomKey">
        <!--        <item name="android:layout_width">@dimen/key_width</item>-->
        <!--        <item name="android:layout_height">@dimen/key_height</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomKeyDigit" parent="CustomKey">
        <item name="android:background">@color/keyboard_divider</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CustomKeyLetter" parent="CustomKey">
        <item name="android:background">@color/keyboard_key</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomKeyExtra" parent="CustomKey">
        <item name="android:background">@color/keyboard_key_extra</item>
        <item name="android:textColor">@color/keyboard_key_extra_text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomKeySuggestion" parent="CustomKey">
        <item name="android:background">@color/keyboard_suggestion_background</item>
        <item name="android:textColor">@color/colorText1</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomKeySettings" parent="CustomKey">
        <item name="android:layout_width">@dimen/key_width</item>
        <item name="android:layout_height">@dimen/key_height</item>
        <item name="android:background">@color/keyboard_suggestion_background</item>
        <item name="android:textColor">@color/colorText2</item>
    </style>

    <style name="CustomKeyDigitTablet" parent="CustomKeyDigit">
        <item name="android:layout_width">@dimen/key_width_tablet</item>
        <item name="android:layout_height">@dimen/key_height_tablet</item>
    </style>

    <style name="CustomKeyLetterTablet" parent="CustomKeyLetter">
        <item name="android:layout_width">@dimen/key_width_tablet</item>
        <item name="android:layout_height">@dimen/key_height_tablet</item>
    </style>

    <style name="CustomKeyExtraTablet" parent="CustomKeyExtra">
        <item name="android:layout_width">@dimen/key_width_tablet</item>
        <item name="android:layout_height">@dimen/key_height_tablet</item>
    </style>

    <style name="CustomKeySuggestionExtra" parent="CustomKeySuggestion">
        <item name="android:layout_width">@dimen/key_width_tablet</item>
        <item name="android:layout_height">@dimen/key_height_tablet</item>
    </style>

    <style name="CustomKeySettingsExtra" parent="CustomKeySettings">
        <item name="android:layout_width">@dimen/key_width_tablet</item>
        <item name="android:layout_height">@dimen/key_height_tablet</item>
    </style>

</resources>