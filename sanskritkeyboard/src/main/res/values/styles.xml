<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/key_height</item>
        <item name="android:layout_marginBottom">@dimen/key_margin</item>
        <item name="android:layout_marginLeft">@dimen/key_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/key_text_size</item>
    </style>

    <style name="CustomKeyDigit" parent="CustomKey">
        <item name="android:background">@color/keyboard_divider</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CustomKeyLetter" parent="CustomKey">
        <item name="android:background">@drawable/key_normal</item>
        <item name="android:textColor">@color/key_label</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomKeyExtra" parent="CustomKey">
        <item name="android:background">@drawable/key_extra_normal</item>
        <item name="android:textColor">@color/key_label</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomKeySuggestion" parent="CustomKey">
        <item name="android:layout_marginTop">@dimen/key_margin</item>
        <item name="android:background">@color/keyboard_suggestion_background</item>
        <item name="android:textColor">@color/key_label</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CustomKeySettings" parent="CustomKey">
        <item name="android:layout_marginTop">@dimen/key_margin</item>
        <item name="android:background">@drawable/key_normal</item>
        <item name="android:textColor">@color/key_settings_label</item>
        <item name="android:layout_width">@dimen/key_settings_width</item>
    </style>

</resources>